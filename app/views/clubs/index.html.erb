<div>
  <h1>Clubs in your area</h1>
  <ul class="clubs large-block-grid-4">
  <% @clubs.each do |club| %>
    <li>
      <div class="row club">
        <%= link_to club do %>
          <%= image_tag "sunset.JPG" %>
        <% end %>
        <div class="small-4 columns"><%= image_tag "club_logo.png" %></div>
        <div class="small-8 columns">
          <%= link_to club do %>
            <h3 class="club-name"><%= club.name %></h3>
          <% end %>
          <div class="club-description subheader"><%= club.description %></div>
        </div>
      </div>
    </li>
  <% end %>
  </ul>  
</div>

