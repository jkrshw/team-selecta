<h1><%= @event.club.name %></h1>
<h2><%= @event.name %></h2>
<div class="header" style="background-image:url(<%= image_url "trials.jpg" %>)">
 
</div>
<div>
  <div>Time</div>
  <div><%= @event.time %></div>
</div>
<div>
  <div>Location</div>
  <div><%= @event.location %></div>
</div>
<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<div>Attending:</div>
<ul class="guests large-block-grid-6 panel">
<% @event.guests.each do |guest| %>
  <li>
    <div class="row">
      <div class="small-4 columns"><%= image_tag "club_logo.png" %></div>
      <div class="small-8 columns">
        <div class="name"><%= guest.user.name %></div>
      </div>
    </div>
  </li>
<% end %>
</ul>